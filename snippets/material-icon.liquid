<i
  class="
    material-icon
    {% if settings.icon_style == 'outlined' %}
      outlined
    {% elsif settings.icon_style == 'sharp' %}
      sharp
    {% elsif settings.icon_style == 'rounded' %}
      rounded
    {%- endif -%}
    {% if filled %} filled{% endif %} {% if custom_color != blank %} material-icon--custom-color color-icon-{{ custom_color }}{% endif %}{{ class }}
  "
  translate="no"
  aria-hidden="true"
  data-icon="{{ icon | strip | downcase | replace: ' ', '_' }}"
>
</i>
