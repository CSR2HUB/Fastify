{% render 'widget-blocker',
  enabled: settings.dbtfy_order_tracking,
  section: section,
  name: 'Order tracking',
  type: 'âš¡ Paid Sections'
%}
{% if request.design_mode or settings.dbtfy_order_tracking %}
  {% render 'section-padding', section: section %}

  {{ 'dbtfy-order-tracking.css' | asset_url | stylesheet_tag }}

  <script src="{{ 'dbtfy-order-tracking.js' | asset_url }}" defer></script>
  <script src="{{ 'dbtfy-track-order.js' | asset_url }}" defer></script>

  <dbtfy-order-tracking>
    <div class="color-{{ section.settings.custom_color_scheme }} dbtfy-color-{{ section.settings.color_scheme }} show-on--{{ section.settings.show_on }} gradient">
      <div class="section-{{ section.id }}-padding {{ section.settings.container_size }}">
        <div class="dbtfy-order-tracking__header">
          <h1 class="page-title h0 center{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
            {{ page.title }}
          </h1>
          {% if page.content != blank %}
            <div class="rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
              {{ page.content }}
            </div>
          {% endif %}
          <dbtfy-order-tracking-form>
            <form action="/" class="dbtfy-order-tracking-form">
              <div class="field">
                <input
                  id="order-tracking-number"
                  type="text"
                  class="field__input"
                  maxlength="50"
                  placeholder="{{ 'widgets.order_tracking.input_placeholder' | t }}"
                >
                <label class="field__label" for="order-tracking-number">
                  {{- 'widgets.order_tracking.input_placeholder' | t -}}
                </label>
              </div>
              <button
                type="submit"
                class="button w-full"
                id="order-tracking-submit"
                aria-label="{{ 'widgets.order_tracking.button_text' | t }}"
              >
                <span class="">
                  {{ 'widgets.order_tracking.button_text' | t }}
                </span>
              </button>
            </form>
          </dbtfy-order-tracking-form>
        </div>

        <div class="dbtfy-order-container">
          <div id="ot-container"></div>
        </div>
      </div>
    </div>
  </dbtfy-order-tracking>
{% endif %}
