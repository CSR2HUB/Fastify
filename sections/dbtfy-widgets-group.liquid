{% schema %}
{
  "name": "t:sections.dbtfy_widgets.name",
  "class": "details",
  "limit": 1,
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "blocks": [{ "type": "@theme" }, { "type": "_dbtfy-variant-swatches" }],
  "settings": [
    {
      "type": "header",
      "content": "t:sections.widget-notice.header"
    },
    {
      "type": "paragraph",
      "content": "t:sections.widget-notice.label"
    },
    {
      "type": "paragraph",
      "content": "t:sections.widget-notice.link"
    }
  ]
}
{% endschema %}
