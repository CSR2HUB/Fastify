      "options": [
        {
          "value": "page-width",
          "label": "t:sections.all.button.options__2.label"
        },
        {
          "value": "page-full",
          "label": "t:sections.all.container_size.options__2.label"
        },
        {
          "value": "custom page-width",
          "label": "t:general.settings.size.option__9"
        }
