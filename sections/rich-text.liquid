{% render 'widget-blocker',
  enabled: settings.dbtfy_rich_text,
  section: section,
  name: 'Rich text',
  type: 'âš¡ Paid Sections'
%}

{% if section.settings.container_size contains 'custom' %}
  {% style %}
    #section__{{ section.id }} .page-width{ --page-width: {{ section.settings.custom_container_size }}px; }
  {% endstyle %}
{% endif %}

{% if request.design_mode or settings.dbtfy_rich_text %}
  <dbtfy-rich-text>
    {{ 'section-rich-text.css' | asset_url | stylesheet_tag }}

    {% render 'section-padding', section: section %}
    <div
      class="show-on--{{section.settings.show_on}} color-{{ section.settings.custom_color_scheme }} dbtfy-color-{{ section.settings.color_scheme }} gradient"
      id="section__{{ section.id }}"
    >
      <div
        class="isolate"
      >
        <div class="rich-text section-{{ section.id }}-padding">
          <div class="{{ section.settings.container_size }} rich-text__wrapper rich-text__wrapper--{{ section.settings.desktop_content_position }} rich-text--{{ section.settings.container_size }}">
            <div>
              {% content_for 'blocks' %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </dbtfy-rich-text>
{% endif %}

{% schema %}
{
