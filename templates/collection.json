{
  "sections": {
    "dbtfy-breadcrumbs": {
      "type": "dbtfy-breadcrumbs",
      "settings": {
        "breadcrumbs": true,
        "show_on": "both",
        "show_social_media_icons": "both",
        "share_on_facebook": true,
        "share_on_messenger": true,
        "tweet_on_twitter": true,
        "pin_on_pinterest": true,
        "share_on_whatsapp": true,
        "share_on_linkedin": true,
        "share_on_reddit": true,
        "share_on_email": true,
