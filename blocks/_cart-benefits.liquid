{% if settings.dbtfy_cart_benefits %}
  <div class="dbtfy-cart-benefits {% if block.settings.as_content_container %}content-container{% endif %} {{ block.settings.alignment }}">
    {%- if block.settings.title != blank -%}
      <h3
        class="title inline-richtext m-0 h3 {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
      >
        {{ block.settings.title }}
      </h3>
    {%- endif -%}
    {% content_for 'blocks' %}
  </div>
{% endif %}
{{ 'dbtfy-cart-benefits.css' | asset_url | stylesheet_tag }}

{% schema %}
{
  "name": "t:sections.benefits-and-guarantees.name",
  "settings": [
    {
      "type": "paragraph",
      "content": "t:sections.cart-upsell.info"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "t:general.settings.block-name.label",
      "info": "t:general.settings.block-name.info"
    },
    {
      "type": "text",
      "id": "title",
      "label": "t:general.settings.heading",
      "default": "t:sections.benefits-and-guarantees.settings.name"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "t:general.settings.alignment.label",
      "default": "justify-content-left text-left",
      "options": [
        { "value": "justify-content-left text-left", "label": "t:general.settings.alignment.option__4" },
        { "value": "justify-content-center text-center", "label": "t:general.settings.alignment.option__5" },
        { "value": "justify-content-right text-right", "label": "t:general.settings.alignment.option__6" }
      ]
    },
    {
      "type": "checkbox",
      "id": "as_content_container",
      "label": "t:sections.benefits-and-guarantees.settings.content_card",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "_cart-benefit"
    }
  ],
  "presets": [
    {
      "name": "t:sections.benefits-and-guarantees.name",
      "blocks": [
        {
          "type": "_cart-benefit",
          "settings": {
            "title": "100% Satisfaction Guarantee",
            "icon": "verified_user"
          }
        },
        {
          "type": "_cart-benefit",
          "settings": {
            "title": "Fast US Shipping",
            "icon": "event_available"
          }
        },
        {
          "type": "_cart-benefit",
          "settings": {
            "title": "30 Day Return",
            "icon": "favorite"
          }
        },
        {
          "type": "_cart-benefit",
          "settings": {
            "title": "Same Day Fulfillment",
            "icon": "schedule"
          }
        },
        {
          "type": "_cart-benefit",
          "settings": {
            "title": "14 Days Return Policy",
            "icon": "undo"
          }
        }
      ]
    }
  ]
}
{% endschema %}
