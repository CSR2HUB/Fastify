{% render 'block-padding', block: block, label: 'description' %}

{%- if block.settings.description != blank -%}
  <div
    class="rte {% if block.settings.alignment == "inherit" %}{{ settings.description_alignment }} {% else %} {{ block.settings.alignment }} {% endif %} {{ block.settings.alignment_mobile }} {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %} block-{{ block.id }}-padding"
    {{ block.shopify_attributes }}
  >
    {%- if block.settings.custom_bullet_icon != blank -%}
      {%- capture content_replace -%}
        <li><span> {% render 'material-icon', icon: block.settings.custom_bullet_icon %} </span>
      {%- endcapture -%}
      {% assign content = block.settings.description | replace: '<li>', content_replace %}
      {% assign content = content | replace: '<ul>', '<ul class="custom_bullet_icon">' %}
      {{ content }}
    {%- else -%}
      {{ block.settings.description }}
    {%- endif -%}
  </div>
{%- endif -%}

