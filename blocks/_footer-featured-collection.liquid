{%
  render 'dbtfy-featured-collection',
  heading: block.settings.heading,
  subheading: block.settings.subheading,
  collection: block.settings.collection,
  collection_limit: block.settings.collection_limit,
  quick_add = 'standard',
  block_id= block.id,
  slider_on_text: 'both',
  enable_loop: block.settings.enable_loop,
  show_arrows: block.settings.show_arrows,
  show_dots: false,
  enable_autoplay: block.settings.enable_autoplay,
  autoplay_speed: block.settings.autoplay_speed,
  arrow_position: block.settings.arrow_position,
  desktop-width: block.settings.column_width,
  tablet-width: block.settings.column_width,
  mobile-width: 12
  block: block.shopify_attributes,
  per_view_desktop: 1,
  per_view_tablet: 1,
  per_view_mobile: 1,
%}

{% schema %}
{
  "name": "t:sections.dbtfy-footer.blocks.featured_collection.name",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "t:sections.dbtfy-footer.blocks.featured_collection.settings.collection.label"
    },
    {
      "type": "range",
      "id": "collection_limit",
      "min": 1,
      "max": 10,
      "step": 1,
      "label": "t:sections.dbtfy-footer.blocks.featured_collection.settings.collection_limit.label",
      "default": 3
    },
    {
      "type": "header",
      "content": "t:general.settings.slider.slider_settings"
    },
    {
      "type": "checkbox",
      "id": "enable_loop",
      "default": true,
      "label": "Loop",
      "info": "Continue from the last slide to the first slide"
    },
    {
      "type": "checkbox",
      "id": "show_arrows",
      "label": "t:general.settings.slider.show_arrows",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_autoplay",
      "label": "t:general.settings.slider.enable_autoplay",
      "default": true
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "label": "t:general.settings.slider.autoplay_speed",
      "min": 3,
      "max": 10,
      "step": 1,
      "unit": "s",
      "default": 5
    },
    {
      "type": "select",
      "id": "arrow_position",
      "default": "bottom",
      "label": "Arrow position",
      "options": [
        {
          "value": "middle",
          "label": "t:general.settings.alignment.option__2"
        },
        {
          "value": "bottom",
          "label": "t:general.settings.alignment.option__3"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.dbtfy-footer.blocks.featured_collection.name"
    }
  ]
}
{% endschema %}
