{
  "name": "t:sections.cart-drawer.blocks.cart-tax.name",
  "settings": [
    {
      "type": "paragraph",
      "content": "t:sections.cart-drawer.blocks.cart-tax.info"
    }
  ],
  "presets": [
    {
      "name": "t:sections.cart-drawer.blocks.cart-tax.name"
    }
  ]
}
{% endschema %}
